<?xml version="1.0" encoding="utf-8" ?>
<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BrainSort.App">
    <Application.Resources>
        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="#1776D2"/>
            <Setter Property="BarTextColor" Value="White" />
        </Style>

        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="{AppThemeBinding Dark=White, Light=Black}"/>
            <Setter Property="PlaceholderColor" Value="{AppThemeBinding Dark=Gray, Light=Gray}"/>
        </Style>

        <Style x:Key="LabelHeadingStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Dark=Gray, Light=Gray}"/>
        </Style>

        <Style x:Key="LabelValueStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Dark=White, Light=Black}"/>
        </Style>

    </Application.Resources>
</Application>